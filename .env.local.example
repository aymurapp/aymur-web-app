# =============================================================================
# Aymur Platform Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values.
# NEVER commit .env.local to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Configuration (Required)
# -----------------------------------------------------------------------------
# Get these from: https://supabase.com/dashboard/project/cudcrgjshblmxtgpstwr/settings/api

# Public URL - safe to expose in browser (used in client-side code)
NEXT_PUBLIC_SUPABASE_URL=https://cudcrgjshblmxtgpstwr.supabase.co

# Anonymous/Public API Key - safe to expose in browser
# This key respects Row Level Security (RLS) policies
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service Role Key - NEVER expose to browser!
# This key BYPASSES Row Level Security - use only in:
# - API routes (/app/api/*)
# - Webhook handlers
# - Server-side admin operations
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# -----------------------------------------------------------------------------
# Stripe Configuration (Optional - for payment features)
# -----------------------------------------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys

# Publishable Key - safe to expose in browser
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here

# Secret Key - NEVER expose to browser!
STRIPE_SECRET_KEY=sk_test_your-key-here

# Webhook Secret - for verifying Stripe webhook signatures
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-secret-here

# -----------------------------------------------------------------------------
# AI Configuration - Google Gemini (Required for AI features)
# -----------------------------------------------------------------------------
# Get from: https://aistudio.google.com/apikey
# Uses Gemini 2.5 Flash via Vercel AI SDK (@ai-sdk/google)

GOOGLE_GENERATIVE_AI_API_KEY=your-gemini-api-key-here

# -----------------------------------------------------------------------------
# Google Maps Configuration (Optional - for address autocomplete)
# -----------------------------------------------------------------------------
# Get from: https://console.cloud.google.com/apis/credentials
# Enable: Places API, Maps JavaScript API

NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# -----------------------------------------------------------------------------
# Twilio Configuration (Optional - for phone validation & OTP)
# -----------------------------------------------------------------------------
# Get from: https://console.twilio.com/
# Enable: Lookup API for phone validation, Verify for OTP

TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# Sentry Configuration (Optional - for error monitoring)
# -----------------------------------------------------------------------------
# Get from: https://sentry.io/settings/account/api/auth-tokens/

# DSN for error reporting (same value for both)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Auth token for source maps upload (CI/CD)
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

# Base URL for the application (used for callbacks, webhooks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Marketing site URL
NEXT_PUBLIC_MARKETING_URL=https://aymur.com

# Environment: development | staging | production
NODE_ENV=development

# -----------------------------------------------------------------------------
# Security Configuration (Optional)
# -----------------------------------------------------------------------------

# Secret for encrypting session data (generate with: openssl rand -base64 32)
# SESSION_SECRET=your-session-secret-here

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------

# Enable/disable features
# NEXT_PUBLIC_ENABLE_AI=true
# NEXT_PUBLIC_ENABLE_STRIPE=true
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
